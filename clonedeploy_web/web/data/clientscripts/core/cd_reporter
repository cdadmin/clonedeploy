#!/bin/sh

hostName=$1
web=$2

while [ -f "/tmp/clone.progress" ]; do
        progress="/tmp/clone.progress"
        post=`tail -n 1 $progress`
		
        result=`curl -sSkX POST -H "Content-type: application/json; charset=UTF-8" -d '{"progress":{"HostName":"'"$hostName"'","Progress":"'"$post"'"} }' ${web}UpdateProgress --connect-timeout 2 --stderr -`
        
        sleep 2
done

